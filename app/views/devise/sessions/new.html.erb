  <div class="box-wrapper">
    
    <%= image_tag 'real-login.png', class: 'login-logo img-responsive center-block' %>
    
    <h2>LP Portal</h2>
    
   <%= devise_error_messages! %>
    <% if resource.errors.any? %>
      <% resource.errors.full_messages.each do |m| %>
        <div class="alert alert-error"><%= m %></div>
      <% end %>
    <% end %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: 'form'  }) do |f| %>
  			<div class="form-group">
  				 <input placeholder="Email" name="user[email]" type="email" class="form-control login-form-control" id="login_email" />
  			</div>
  			<div class="form-group">
  				 <input placeholder="Password" name="user[password]" type="password" class="form-control login-form-control" id="login_password" />
  			</div>
  			<div class="form-group">
  				 <input name="commit" value="Login" type="submit" class="btn btn-default btn-block login-form-control">
  			</div>
  	<% end %>
  </div>	
