
<div class="box-wrapper">
  
  <%= render partial: 'auth_page_branding' %>

  <% if flash[:notice] %>
    <div class="alert alert-notice"><%= flash[:notice] %></div>
  <% end %>
  
  <%= form_tag '/reset_password' do |f| %>
			<div class="form-group">
				 <input placeholder="Email" name="email" type="email" class="form-control login-form-control" id="login_email" value="<%= @email %>"/>
			</div>
			<div class="form-group">
				 <input name="commit" value="Reset my Password" type="submit" class="btn btn-default btn-block login-form-control">
			</div>
			<% if @redirect.present? %>
				<input type="hidden" name="redirect" value="<%= @redirect %>">
			<% end %>
	<% end %>
</div>	
