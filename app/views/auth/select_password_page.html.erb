
<div class="box-wrapper">
  
  <%= image_tag 'real-login.png', class: 'login-logo img-responsive center-block' %>
  
  <h2>LP Portal</h2>
  
  <% if flash[:notice] %>
    <div class="alert alert-notice"><%= flash[:notice] %></div>
  <% end %>
  <p>Welcome, <%= @user.first_name %>.</p>
  <p>Your account login is <%= @user.email %>.</p>
  <p>To activate your account, select a password.</p>
  <%= form_tag '/select_password' do |f| %>

			<div class="form-group">
				 <input placeholder="Password" name="password" type="password" class="form-control login-form-control" id="login_password" />
			</div>
			<div class="form-group">
				 <input placeholder="Confirm Password" name="password_confirmation" type="password" class="form-control login-form-control" id="login_password_confirmation" />
			</div>
			<div class="form-group">
				 <input name="commit" value="Submit Password" type="submit" class="btn btn-default btn-block login-form-control">
			</div>
			<input name="token" type="hidden" value="<%= @token %>">
	<% end %>
</div>	
