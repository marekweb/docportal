@media (min-width: 1200px) {
  .container {
    width: 1120px;
  }
}

.list {
    width: 50%;
    margin: 0 auto;
}
.item {
    background-color: #ecf8ff;
    padding: 16px;
    margin: 16px 0;
    border: 1px solid #9ad9fd;

}
.item-name {
    font-weight: bold;
    font-size: 15px;
}
.item-subtitle {
  font-weight: 300;
  margin-top: 4px;
}
a.item-link:link, a.item-link:visited {
    text-decoration: none;
    color: inherit;
}
.header {
    height: 80px;
    margin-bottom: 80px;
    background-color: #4a5a6a;
    z-index: 10;
    position: relative
}

.logo {
    margin-top: 25px;
    width: auto;
    max-height: 26px;
}
