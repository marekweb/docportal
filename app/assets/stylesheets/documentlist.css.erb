.category-filter-dropdown {
  float: left;
  width: 48%;
}


.year-filter-dropdown {
  float: right;
  width: 96px;
}


.filter-button {
  border: 1px solid #a4a4a4;
  color: #a4a4a4;
  border-radius: 1px;
  padding: 6px 6px 6px 8px;
  font-weight: 400;
  text-align: center;
}

a .filter-button {
  text-decoration: none;
}

.filter-button:hover, .filter-button.active {
  background-color: rgba(0, 0, 0, 0.04);
  text-decoration: none;
}

/* Sidebar menu items */

.sidebar-title {
  font-weight: 700;
  text-transform: uppercase;
  margin: -4px 0 26px;
  font-size: 17px;
}
.sidebar-item {
  margin: 12px 0;
  font-size: 15px;
  font-weight: 300;
}
.sidebar-item-active {
  font-weight: 400;
}
.sidebar-spacer {
  height: 15px;
}

a:hover, a:active, a:focus {
  text-decoration: none;
}
.sidebar-link:link, .sidebar-link:visited {
  color: inherit;
  text-decoration: none;
}
.item-icons {
  float: right;
  margin-top: 7px;
  margin-right: 16px;
}
.item-icons img {
  width: 32px;
  height: 32px;
}

.clickable, .profile-name {
  cursor: pointer;
}
.profile-name {
  color: white;
  font-weight: 300;
}

.navbar-profile {
  margin-top: 20px;
  text-align: right;
}

.category-filter-dropdown .dropdown-menu,
.year-filter-dropdown .dropdown-menu {
  text-align: center;
  min-width: 0;
  border-radius: 3px;
  width: 100%;
}

.filter-dropdown li a:hover {
  background-color: transparent;
  color: #45c1ff;
}

.year-filter-dropdown .active {
  color: #45c1ff;
  font-weight: 500;
}

.year-filter-dropdown .active:hover {
  color: #45c1ff;
}

.profile-icon {
  padding-top: 9px;
  border: 1px solid white;
  color: white;
  border-radius: 50%;
  margin-right: 18px;
  display: inline-block;
  width: 40px;
  height: 40px;
  text-align: center;
}


#viewer-frame {
  position: fixed;
  top: 0;
  left: 0;
  background-color: transparent;
  border: none;
  height: 100%;
  width: 100%;
  display: none;
}

.badge.notification-badge {
  background-color: #ff5d5d;
  height:16px;
  width: 16px;

  font-weight: 400;
  line-height: inherit;
  
  position:relative;
  top: -6px;
  left: -7px;
  
  line-height: 16px;
  padding: 0;
}

.item-icon-view {
  margin-right: 5px;
}

.notification-icon {
  margin-left: 18px;
  max-height: 19px;
  margin-right: -8px
}

.no-documents-message {
  background: #f2dede;
  border: 1px solid #ECC5CB;
  padding: 10px 20px 10px 20px;
  border-radius: 2px;
  color: #b94a48;
  font-size: 13px;
  margin-top: 20px
}

@media only screen and (max-width : 768px) {
  .header { margin-bottom: 20px }
  .filter-area { margin-bottom: 19px }
  .container { padding: 2px; }
  .filter-dropdown {
    width: 48%;
  }
  .item { margin: 11px 0; }
}


@media only screen and (max-width : 768px) {
  .circle { display: none };
}

@media (max-width: 768px) {
  .profile-name {
    display: none;
  }
}

@media only screen and (max-width : 768px) {
  .year-filter-dropdown {
    float: right;
    width: 48%;
  }
}

.debug {
  font-size: 10px;
  opacity: 0.5;
}