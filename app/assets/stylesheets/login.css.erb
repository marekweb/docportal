html, body {
  height: 100%;
}


html.login {
  background-image: url(<%= asset_path 'large-background.jpg' %>);
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  background-attachment: fixed;
}

.box-wrapper {
  background-color: white;
  width: 29%;
  padding: 20px 0;
  margin: 0px auto 00px;
  text-align: center;
  min-width:320px;
  
  box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.18);
  
  top: 50%;
  transform: translateY(-50%);
  position: relative;
}

.box-wrapper h2 {
  color: #a0a0a0;
  font-weight: 300;
  text-align: center;
  font-size: 24px;
  margin-top: 30px;
  margin-bottom: 40px;
}

.box-wrapper .form-control {
  background-color: #f0f0f0;;
}

.login-logo {
  max-width: 14%;
  margin-top: 30px;
}

.form-control.login-form-control, input.btn-block.login-form-control {
  height: auto;
  width: 78%;
  margin: 0 auto 18px;
  padding: 14px 20px;
  border-radius: 0;
  box-shadow: none;
  -webkit-box-shadow: none;
  border: none;
}

input.btn-block.login-form-control {
  background-color: #4a5a6a;
  color: white;
  font-weight: 600;
  margin-bottom: 26px;
}


